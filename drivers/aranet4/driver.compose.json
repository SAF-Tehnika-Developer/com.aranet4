    "measure_battery",
    "measure_co2",
    "measure_humidity",
    "measure_pressure",
    "measure_temperature",
    "alarm_battery"
  ],
  "energy": {
    "batteries": ["AA", "AA"]
  },
  "images": {
    "large": "/drivers/aranet4/assets/images/large.png",
    "small": "/drivers/aranet4/assets/images/small.png"
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Notification settings"
      },
      "children": [
        {
          "id": "connection",
          "type": "checkbox",
          "value": true,
          "label": {
            "en": "Lost/restored connection notification"
