{
  "name": {
    "en": "Aranet4"
  },
  "pair": [
    {
      "id": "list_aranet_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_aranet_devices"
      },
      "options": {
        "singular": false
      }
    },
    {
      "id": "add_aranet_devices",
      "template": "add_devices"
    }
  ],
  "class": "sensor",
