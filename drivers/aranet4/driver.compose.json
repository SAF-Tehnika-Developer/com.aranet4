      },
      "children": [
        {
          "id": "name",
          "type": "label",
          "label": {
            "en": "Device name"
          },
          "value": ""
        },
        {
          "id": "uuid",
          "type": "label",
          "label": {
            "en": "Device uuid address"
          },
          "value": ""
        },
        {
          "id": "added",
          "type": "label",
          "label": {
            "en": "Device added on"
          },
          "value": ""
        },
        {
          "id": "restarted",
          "type": "label",
          "label": {
            "en": "Device last restarted on"
          },
          "value": ""
        }
      ]
    }
